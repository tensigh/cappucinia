<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag session_path do %>
    <p>
      <label>Email</label>
      <%= email_field_tag 'email' %>
    </p>
    <p>
      <label>Password</label>
      <%= password_field_tag 'password' %>
    </p>
      <%= submit_tag "Log in", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
